# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Fernet key â€” used for encrypting notes and todos (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your_fernet_key_here

# Azure Key Vault KEK URI for Canvas token encryption (e.g. https://<vault>.vault.azure.net/keys/<key-name>/<version>)
# If not set, tokens fall back to Fernet encryption (local dev mode)
KEYVAULT_KEK_ID=

# Canvas LMS base URL (must be https)
CANVAS_BASE_URL=https://canvas.nus.edu.sg

# Web server for secure token setup (set WEB_BASE_URL to enable)
WEB_BASE_URL=
WEB_PORT=8080

# Canvas API token for local/self-hosted use (skip web setup)
# If set, /setup will use this token directly
# CANVAS_TOKEN=

# Change to true if self hosted
IS_SELF_HOSTED=False

# SQLite database path (optional)
# DB_PATH=bot.db
